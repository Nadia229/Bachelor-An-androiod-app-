<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:layout_marginTop="5dp"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
                <android.support.v7.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_weight="0.01"
                    android:background="@drawable/bg"
                    android:minHeight="2dp" >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/back3"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="70dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_arrow_back_black_24dp" />

                </LinearLayout>
            </android.support.v7.widget.Toolbar>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="115dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:text="Sign Up"
                android:textColor="#00ACC1"
                android:textSize="30sp"
                android:textStyle="bold" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_firstname"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tx_lastname"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/FirstName"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/style1"
                    android:hint="Your First Name"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/LastName"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/style1"
                    android:hint="Your Last Name"
                    android:textSize="13dp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tx_email"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tx_mobile"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Email"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/style1"
                    android:hint="Your mail"
                    android:textSize="14dp" />

                <EditText
                    android:id="@+id/MobileNumber"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/style1"
                    android:hint="Your Mobile No."
                    android:textSize="13dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="2"
                android:orientation="horizontal">

                <TextView
                    android:text="Local Guardian Name"
                    android:textColor="#000"
                    android:id="@+id/tx_guardian"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold" />

                <TextView

                    android:textColor="#000"
                    android:text="Guardian's Phone No."
                    android:id="@+id/tx_guardianmobile"
                    android:layout_width="200dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/GuardiansName"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/style1"
                    android:hint="Local Guardian"
                    android:textSize="13dp" />

                <EditText
                    android:id="@+id/GuardiansPhone"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/style1"
                    android:hint="Guardian's Phone"
                    android:textSize="13dp" />


            </LinearLayout>

            <TextView
                android:id="@+id/tx_password"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/Password"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/style1"
                android:hint="Password"
                android:textSize="13dp" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Re-write password"
                android:textColor="#000000"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/RePassword"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/style1"
                android:hint="Re-write password"
                android:textSize="13dp" />

            <TextView
                android:id="@+id/tx_address"
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/Flatfloor"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/style1"
                    android:hint="Flat no.#"
                    android:textSize="13dp" />
                <EditText
                    android:id="@+id/house"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="2dp"
                    android:layout_weight="1"
                    android:background="@drawable/style1"
                    android:hint="House#"
                    android:textSize="13dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">
            <EditText
                android:id="@+id/area"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:layout_weight="1"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@drawable/style1"
                android:hint="Area#"
                android:textSize="13dp" />

                <EditText
                    android:id="@+id/Road"
                    android:paddingLeft="5dp"
                    android:imeOptions="actionNext"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/style1"
                    android:hint="Road No"
                    android:textSize="13dp" />

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Birth Certificate No."
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/BirthCertificate"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/style1"
                android:hint="Ex. 123456789"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="National Id Card No."
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/NationaIDCard"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/style1"
                android:hint="Ex.123456789"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="University Name"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/University"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/style1"
                android:hint="Your University Name"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="University ID"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Universityid"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/style1"
                android:hint="Ex.123456789"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:text="Company Name"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Company"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/style1"
                android:hint="Your Company Name"
                android:textSize="13dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:text="Employ ID"
                android:textColor="#000000"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/Employid"
                android:paddingLeft="5dp"
                android:imeOptions="actionNext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="2dp"
                android:background="@drawable/style1"
                android:hint="Ex.123456789"
                android:textSize="13dp" />

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal">

                <CheckBox
                    android:id="@+id/checkbox_agree"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="0.5" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_weight="1.5"
                    android:text="I agree with the term and conditions"
                    android:textColor="#000000"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button

                android:id="@+id/btn_confirm"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/style2"
                android:text="Confirm"
                android:textColor="#fff"
                android:textStyle="bold" />
            <TextView

                android:id="@+id/link_login"
                android:textSize="16sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:textAlignment="center"
                android:text="Already a member? Login"
                android:textColor="@color/colorAccent" />


        </LinearLayout>

    </LinearLayout>
</ScrollView>